@{
    ViewData["Title"] = "Home Page";
}
@model GenerateXmlInputModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="WikipediaLink" class="mb-1">Wikipedia Link</label>
                    <input asp-for="WikipediaLink" class="form-control" />
                    <span asp-validation-for="WikipediaLink" class="text-danger"></span>
                </div>
                <div class="from-group mb-3">
                    <label asp-for="DtdFile" class="mb-1">Upload dtd fikle</label>
                    <input asp-for="DtdFile" class="form-control" type="file" />
                    <span asp-validation-for="DtdFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Generate</button>
                </div>
            </form>
        </section>
    </div>
</div>
